<form method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="" class="form-label">Nazwa Oferty</label>
        <input type="text" name="name" value="<%= form.name %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Kod oferty</label>
        <input type="text" name="offer_code" value="<%= form.offer_code %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Zdjęcie oferty</label>
        <input type="file" name="image" class="form-control" id="image">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Opis oferty</label>
        <input type="text" name="description" value="<%= form.description %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Kraj</label>
        <input type="text" name="country" value="<%= form.country %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Region</label>
        <input type="text" name="region" value="<%= form.region %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Miasto</label>
        <input type="text" name="city" value="<%= form.city %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Wylot</label>
        <input type="date" name="from_date" value="<%= form.from_date %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Powrót</label>
        <input type="date" name="to_date" value="<%= form.to_date %>" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Cena</label>
        <input type="text" value="<%= form.price %>" name="price" class="form-control" required>
    </div>
    <button class="btn btn-primary"><%- buttonText %></button>
</form>


<% if (errors) { %>

<div class="alert alert-danger mt-3">
Popraw dane w formularzu
</div>

<% } %>