<form>
<style>
    .a {
        text-decoration: none;
    }
</style>

    <div class="row" style="text-transform: capitalize;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/oferty/">Wszystko</a></li>
              <% if(search_params.country_slug) { %>
              <li class="breadcrumb-item"><a href="/oferty/<%- search_params.country %>"><%- search_params.country_slug %></a></li>
              <% } %>
              <% if(search_params.region_slug) { %>
              <li class="breadcrumb-item"><a href="/oferty/<%- search_params.country %>/<%- search_params.region %>"><%- search_params.region_slug %></a></li>
              <% } %>
              <% if(search_params.city_slug) { %>
              <li class="breadcrumb-item active" aria-current="page"><%- search_params.city_slug %> </li>
              <% } %>
            </ol>
          </nav>
    </div>

<div class="row">
    <div class="col-3">
<h5>Filtrowanie</h5>
<div class="mb-3">
    <label for="catering" class="form-label">Wyżywienie</label>
            <select name="catering" id="catering" class="form-control">
                <option value="all-inclusive">All  Inclusive</option>
                <option value="hb">Śniadanie i obiadokolacje (HB)</option>
                <option value="breakfasts">Śniadania</option>
                <option value="own">Własne</option>
                <option value="fb">Trzy posiłki</option>
            </select>
            <button class="btn btn-primary mt-2">Szukaj</button>
        </div> 
    </div>
    <div class="col-9">
        <% offers.forEach(offer => { %>
            <a href="/oferty/<%- offer.country_slug %>/<%- offer.region_slug %>/<%- offer.city_slug %>/<%- offer.slug %>" style="text-decoration: none;">
            <div class="card mb-3" style="max-height: 55%;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="/uploads/<%- offer.image %>" class="img-fluid rounded-start" style="min-height: 100%; min-width: 100%;" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <p class="p mt-2 mb-1" style="font-size: 0.75rem; line-height: 1.5rem; color: #3d3d3d; text-transform: capitalize;"><%- offer.country %> / <%- offer.region %> / <%- offer.city %></p>
                      <h5 class="card-title"><%- offer.name %></h5>
